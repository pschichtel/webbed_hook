{
  "$id": "https://schich.tel/webbed_hook/request.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "version": {
      "type": "string",
      "enum": [
        "1"
      ]
    },
    "default-branch": {
      "type": "string"
    },
    "config": {
      "type": ["object", "array", "string", "number", "integer", "boolean", "null"]
    },
    "changes": {
      "type": "array",
      "minLength": 1,
      "items": {
        "oneOf": [
          {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "enum": ["add"]
              },
              "name": {
                "type": "string"
              },
              "commit": {
                "type": "string"
              }
            },
            "required": [
              "type",
              "name",
              "commit"
            ]
          },
          {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "enum": ["remove"]
              },
              "name": {
                "type": "string"
              },
              "commit": {
                "type": "string"
              }
            },
            "required": [
              "type",
              "name",
              "commit"
            ]
          },
          {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "enum": ["update"]
              },
              "name": {
                "type": "string"
              },
              "old-commit": {
                "type": "string"
              },
              "new-commit": {
                "type": "string"
              },
              "merge-base": {
                "type": "string"
              },
              "force": {
                "type": "boolean"
              },
              "patch": {
                "type": "string",
                "format": "base64"
              }
            },
            "required": [
              "type",
              "name",
              "old-commit",
              "new-commit",
              "force"
            ]
          }
        ]
      }
    },
    "push-options": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "signature": {
      "type": "object",
      "properties": {
        "certificate": {
          "type": "string"
        },
        "signer": {
          "type": "string"
        },
        "key": {
          "type": "string"
        },
        "status": {
          "type": "string",
          "enum": [
            "good",
            "bad",
            "unknown-validity",
            "expired",
            "expired-key",
            "revoked-key",
            "cannot-check",
            "no-signature"
          ]
        },
        "nonce": {
          "oneOf": [
            {
              "type": "object",
              "properties": {
                "type": {
                  "type": "string",
                  "enum": ["unsolicited"]
                },
                "nonce": {
                  "type": "string"
                }
              },
              "required": [
                "type",
                "nonce"
              ]
            },
            {
              "type": "object",
              "properties": {
                "type": {
                  "type": "string",
                  "enum": ["missing"]
                }
              },
              "required": [
                "type"
              ]
            },
            {
              "type": "object",
              "properties": {
                "type": {
                  "type": "string",
                  "enum": ["bad"]
                },
                "nonce": {
                  "type": "string"
                }
              },
              "required": [
                "type",
                "nonce"
              ]
            },
            {
              "type": "object",
              "properties": {
                "type": {
                  "type": "string",
                  "enum": ["ok"]
                },
                "nonce": {
                  "type": "string"
                }
              },
              "required": [
                "type",
                "nonce"
              ]
            },
            {
              "type": "object",
              "properties": {
                "type": {
                  "type": "string",
                  "enum": ["slop"]
                },
                "nonce": {
                  "type": "string"
                },
                "stale-seconds": {
                  "type": "integer",
                  "minimum": 0
                }
              },
              "required": [
                "type",
                "nonce",
                "stale-seconds"
              ]
            }
          ]
        }
      },
      "required": [
        "certificate",
        "signer",
        "key",
        "status",
        "nonce"
      ]
    },
    "metadata": {
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["gitlab"]
            },
            "id": {
              "oneOf": [
                {
                  "type": "object",
                  "properties": {
                    "type": {
                      "type": "string",
                      "enum": ["user"]
                    },
                    "id": {
                      "type": "integer",
                      "minimum": 0
                    }
                  },
                  "required": [
                    "type",
                    "id"
                  ]
                },
                {
                  "type": "object",
                  "properties": {
                    "type": {
                      "type": "string",
                      "enum": ["key"]
                    },
                    "id": {
                      "type": "integer",
                      "minimum": 0
                    }
                  },
                  "required": [
                    "type",
                    "id"
                  ]
                }
              ]
            },
            "project-path": {
              "type": "string"
            },
            "protocol": {
              "type": "string",
              "enum": [
                "http",
                "ssh",
                "web"
              ]
            },
            "repository": {
              "oneOf": [
                {
                  "type": "object",
                  "properties": {
                    "type": {
                      "type": "string",
                      "enum": ["project"]
                    },
                    "id": {
                      "type": "integer",
                      "minimum": 0
                    }
                  },
                  "required": [
                    "type",
                    "id"
                  ]
                }
              ]
            },
            "username": {
              "type": "string"
            }
          },
          "required": [
            "type",
            "id",
            "project-path",
            "protocol",
            "repository",
            "username"
          ]
        },
        {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": [
                "none"
              ]
            }
          }
        }
      ]
    }
  },
  "required": [
    "version",
    "default-branch",
    "config",
    "changes",
    "push-options",
    "signature",
    "metadata"
  ]
}